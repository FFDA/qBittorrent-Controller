<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="help"
        android:title="@string/help_category">
        <Preference
            android:summary="@string/help_documentation_summary"
            android:title="@string/help_documentation_title">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/lgallard/qBittorrent-Client/wiki" />
        </Preference>
        <Preference
            android:summary="@string/help_report_summary"
            android:title="@string/help_report_title"
            android:key="report">
        </Preference>
        <Preference
            android:key="version"
            android:title="@string/help_version_title"></Preference>
        <Preference
            android:summary="@string/help_rate_summary"
            android:title="@string/help_rate_title">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://play.google.com/store/apps/details?id=com.lgallardo.qbittorrentclient" />
        </Preference>
        <Preference
            android:summary="@string/app_name"
            android:title="@string/help_about_title">
            <intent android:action="com.lgallardo.qbittorrentclient.AboutActivity" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>
